@model CatalogoBotanico.Models.Userdata
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "LayoutHome";
}
<main>
    <a asp-action="Iniciar" asp-controller="Home">¿Ya tienes cuenta? Inicia sesión</a><br />
    <form method="post" asp-action="Registrar" asp-controller="Home">
        <input type="text" asp-for="Name" placeholder="Cree un nombre de usuario" required /><br />
        <input type="email" asp-for="Email" placeholder="Añada su correo electrónico" required /><br />
        <input type="password" asp-for="Password" name="pw1" placeholder="Cree una contraseña" required /><br />
        <input type="password" asp-for="Password" name="pw2" placeholder="Confirme su contraseña" required /><br />
        @Html.ValidationSummary()
        <input type="submit" value="Continuar" />
    </form>
</main>
