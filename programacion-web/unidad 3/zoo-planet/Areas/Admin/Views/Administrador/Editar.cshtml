@model ZooPlanet.Models.ViewModels.EspeciesViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}
<h1>Editar Especies</h1>
<form method="post" action="~/Admin/Administrador/Editar">
    <input type="hidden" id="idEspecie" asp-for="Especie.Id" />
    <label>Nombre:</label>
    <input required="required" type="text" id="txtNombre" asp-for="Especie.Especie" />
    <label>Clase:</label>
    <select id="cmbClase" required="required" asp-for="Especie.IdClase"
            asp-items="@(new SelectList(Model.Clases, "Id", "Nombre"))">
        <option value="">Seleccione una clase</option>
    </select>
    <label>Habitat:</label>
    <input required="required" type="text" id="txtHabitat" asp-for="Especie.Habitat" />
    <label>Peso:</label>
    <input type="number" step="0.1" required="required" id="txtPeso" asp-for="Especie.Peso" />
    <label>Tamaño:</label>
    <input type="number" step="0.1" required="required" asp-for="Especie.Tamaño" />
    <label>Observaciones:</label>
    <<textarea required="required" asp-for="Especie.Observaciones" rows="2" cols="20"></textarea>
    @Html.ValidationSummary()
    <input type="submit" value="Guardar" id="btnGuardar" />
    <a href="~/Admin/Administrador">
        <input type="button" value="Cancelar" id="btnCancelar" formnovalidate="formnovalidate" />
    </a>
</form>