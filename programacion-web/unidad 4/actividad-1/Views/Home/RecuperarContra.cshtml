@model Actividad1.Models.Usuario
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "LayoutOursCafe";
}

<main>
    <a href="~/Home/IniciarSesion">
        Volver a Iniciar Sesión
    </a>
    <h1>Recuperar mi contraña</h1>
    <p>
        Para recuperar su contraseña, necesitamos que introduzca
        <br />
        el correo electrónico que usó para registrarse.
        <br />
        Le envíaremos un correo donde se le explicará como recuperar su contraseña.
    </p>
    <form method="post" action="~/Home/RecuperarContra">
        <input type="email" name="correo" placeholder="Correo electrónico" required />
        <br />
        <input type="submit" value="Enviar correo" />
    </form>
</main>