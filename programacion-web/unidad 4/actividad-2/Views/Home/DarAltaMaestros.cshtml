@model Actividad2.Models.Maestro
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "LayoutRoles";
}
<main>
    <section id="datos">
        <h1>Dar de alta un nuevo maestro</h1>
        <form method="post" action="~/Home/DarAltaMaestros">
            <label id="editar">Número de control:</label>
            <input type="number" asp-for="NoControl" required />
            <br />
            <label id="editar">Nombre completo:</label>
            <input type="text" asp-for="Nombre" required />
            <br />
            <label id="editar">Contraseña:</label>
            <input type="password" asp-for="Contrasena" required />
            <br />
            @Html.ValidationSummary()
            <input type="submit" value="Dar de alta" />
            <a href="~/Home/ListaMaestros">Cancelar</a>
        </form>
    </section>
    
</main>