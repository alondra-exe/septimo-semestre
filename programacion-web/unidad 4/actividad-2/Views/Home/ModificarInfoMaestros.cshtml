@model Actividad2.Models.Maestro
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "LayoutRoles";
}
<main>
    <section id="datos">
        <h1>Modificar información</h1>
        <form method="post" action="~/Home/ModificarInfoMaestros">
            <input type="hidden" asp-for="Id" />
            <br />
            <label id="labels">Número de control:</label>
            <input id="txtdisplay" type="number" asp-for="NoControl" required readonly />
            <br />
            <label id="editar">Nombre completo:</label>
            <input type="text" asp-for="Nombre" required />
            <br />
            @Html.ValidationSummary()
            <input type="submit" value="Modificar" />
            <a href="~/Home/ListaMaestros">Cancelar</a>
        </form>
    </section>
</main>