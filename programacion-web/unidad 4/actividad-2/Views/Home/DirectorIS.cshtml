@model Actividad2.Models.Director
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "LayoutRoles";
}
<main>
    <section id="datos">
        <h1>Bienvenido director</h1>
        <a href="~/Home/MaestroIS">QUIERO ACCEDER COMO MAESTRO</a>
        <form method="post" action="~/Home/DirectorIS">
            <input type="number" asp-for="NoControl" placeholder="Número de control" required />
            <br />
            <input type="password" asp-for="Contrasena" placeholder="Contraseña" required />
            <br />
            <input type="submit" value="Acceder como director" />
            @Html.ValidationSummary()
        </form>
    </section>
    
</main>