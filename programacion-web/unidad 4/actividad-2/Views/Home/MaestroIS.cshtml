@model Actividad2.Models.Maestro
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "LayoutRoles";
}
<main>
    <section id="datos">
        <h1>Bienvenido maestro</h1>
        <a href="~/Home/DirectorIS">QUIERO ACCEDER COMO DIRECTOR</a>
        <form method="post" action="~/Home/MaestroIS">
            <input type="number" asp-for="NoControl" placeholder="Número de control" required />
            <br />
            <input type="password" asp-for="Contrasena" placeholder="Contraseña" required />
            <br />
            <input type="submit" value="Acceder como maestro" />
            @Html.ValidationSummary()
        </form>
    </section>
</main>