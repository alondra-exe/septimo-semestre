@model Actividad2.Models.Maestro
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "LayoutRoles";
}
<main>
    <section id="datos">
        <h1>Cambiar contraseña</h1>
        <label id="labels">Está contraseña será asignada a: </label>
        <input id="txtdisplay" type="text" asp-for="Nombre" readonly />
        <form method="post" action="~/Home/CambiarContraMaestro">
            <input type="hidden" asp-for="Id" />
            <br />
            <input type="password" asp-for="Contrasena" name="nuevaContra" placeholder="Nueva contraseña" required />
            <br />
            <input type="password" name="nuevaContraConfirm" placeholder="Confirmar contraseña" required />
            <br />
            @Html.ValidationSummary()
            <input type="submit" value="Cambiar" />
            <a href="~/Home/ListaMaestros">Cancelar</a>
        </form>
    </section>
</main>